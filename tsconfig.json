{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"moduleResolution": "node",

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"strict": true,
		"skipLibCheck": true,

		"baseUrl": "./src",
		"paths": {
			"@bootstrap/*": ["bootstrap/*"],
			"@modules/*": ["modules/*"],
			"@shared/*": ["shared/*"],
			"@db/*": ["shared/database/*"]
		},

		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
